<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/NameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of transaction"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="72dp" />

    <EditText
        android:id="@+id/nameTxt"
        android:layout_width="347dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Name of transaction"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="101dp" />

    <RadioButton
        android:id="@+id/rbtnExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/typeLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of Transaction"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="181dp" />

    <RadioButton
        android:id="@+id/rbtnRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revenue"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="208dp" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="347dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="437dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="338dp"
        android:layout_height="42dp"
        android:text="Submit"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="597dp" />


    <TextView
        android:id="@+id/txv_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/edt_ItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:layout_below="@id/txv_itemName"/>

    <TextView
        android:id="@+id/txv_itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:layout_below="@id/edt_ItemName"/>

    <EditText
        android:id="@+id/edt_dec_itemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@id/txv_itemPrice"/>

    <TextView
        android:id="@+id/txv_itemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:layout_below="@id/edt_dec_itemPrice"/>

    <Spinner
        android:id="@+id/spn_ItemCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/txv_itemCategory"/>

    <Button
        android:id="@+id/btn_addNewExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="@string/act_addexp_addexpense"
        android:layout_below="@id/spn_ItemCategory"/>

</RelativeLayout>